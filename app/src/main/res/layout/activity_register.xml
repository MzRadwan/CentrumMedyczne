<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_final_gradient"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:fontFamily="@font/verdana"
                android:textSize="30sp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="Zarejestruj się" />

            <EditText
                android:id="@+id/nameRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:inputType="textPersonName"

                android:hint="imie" />

            <EditText
                android:id="@+id/surnameRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:inputType="textPersonName"
                android:hint="nazwisko" />

            <EditText
                android:id="@+id/peselRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="PESEL"
                android:inputType="number" />

            <EditText
                android:id="@+id/phoneRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="telefon"
                android:inputType="phone" />

            <EditText
                android:id="@+id/emailRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/passwordRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="hasło"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/repeatPassRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="powtórz hasło"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/cityRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="miasto"
                 />
            <EditText
                android:id="@+id/postalCodeRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="kod pocztowy"
                />

            <EditText
                android:id="@+id/streetRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="ulica"
                 />

            <EditText
                android:id="@+id/buildingRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="numer budynku" />

            <EditText
                android:id="@+id/apartmentRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20sp"
                android:background="@drawable/sky_button"
                android:layout_margin="5dp"
                android:fontFamily="@font/verdana"
                android:textSize="20sp"
                android:textColorHint="@color/blue"
                android:textColor="@color/navy"
                android:hint="numer lokalu" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/white_button"
                android:fontFamily="@font/verdana"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textColor="@color/navy"
                android:onClick="onClickRegister"
                android:text="Zarejestruj" />

            <TextView
                android:id="@+id/alreadySignedUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="Masz już konto?" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>