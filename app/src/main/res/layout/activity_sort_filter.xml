<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fair"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"

    tools:context=".SortFilterActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/verdana"
        android:text="@string/sortuj"
        android:textAlignment="center"
        android:textColor="@color/navy"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/sortOptionSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_button"
        android:entries="@array/sort_options"
        android:padding="10dp"

        />

    <Spinner
        android:id="@+id/sortDirectionSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_button"
        android:entries="@array/sort_direction"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/verdana"
        android:text="@string/filtruj"
        android:textAlignment="center"
        android:textColor="@color/navy"

        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/verdana"
        android:text="@string/rednia_ocena"
        android:textAlignment="center"
        android:textSize="16sp" />


    <me.bendik.simplerangeview.SimpleRangeView
        android:id="@+id/averageBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:activeLineColor="@color/lagoon"
        app:fixedThumbColor="@color/lagoon"
        app:count="6"
        app:end="6"
        app:showTicks="false"
        app:showActiveTicks="false"
        app:lineColor="@color/sky"
        app:start="0" />
    <!--
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/verdana"
            android:textSize="16dp"
            android:text="@string/czas_oczekiwania_na_wizyt" />

        <me.bendik.simplerangeview.SimpleRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waitTimeBar"
            app:count="30"
            app:start="0"
            app:end="30"
            app:lineColor="@color/sky"
            app:activeLineColor="@color/lagoon"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/verdana"
            android:textSize="16dp"
            android:text="@string/liczba_opinii" />


        <me.bendik.simplerangeview.SimpleRangeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/opinionsBar"
            app:count="100"
            app:start="0"
            app:end="100"
            app:lineColor="@color/sky"
            app:activeLineColor="@color/lagoon"
            />
    -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/verdana"
        android:text="@string/liczba_recenzji"
        android:textAlignment="center"
        android:textSize="16sp" />

    <me.bendik.simplerangeview.SimpleRangeView
        android:id="@+id/ratesBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:activeLineColor="@color/lagoon"
        app:count="100"
        app:end="100"
        app:showActiveTicks="false"
        app:showTicks="false"
        app:lineColor="@color/sky"
        app:start="0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/verdana"
        android:text="@string/cena_za_wizyt"
        android:textAlignment="center"
        android:textSize="16sp" />

    <me.bendik.simplerangeview.SimpleRangeView
        android:id="@+id/priceBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:activeLineColor="@color/lagoon"
        app:count="100"
        app:end="100"
        app:fixedLabelColor="@color/fair"
        app:activeLabelColor="@color/blue"
        app:showActiveTicks="false"
        app:showTicks="false"
        app:lineColor="@color/sky"
        app:start="0" />
    <!--
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/verdana"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:text="@string/odleg_o" />

        <me.bendik.simplerangeview.SimpleRangeView
            android:id="@+id/distanceBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:count="100"
            app:start="0"
            app:end="100"
            app:lineColor="@color/sky"
            app:activeLineColor="@color/lagoon"/>
    -->
    <Button
        android:id="@+id/applyButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/lagoon_button"
        android:fontFamily="@font/verdana"
        android:text="@string/zastosuj"
        android:textAllCaps="false"
        android:textColor="@color/navy"
        android:textSize="18sp" />
</LinearLayout>