<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fair"
    tools:context=".EditPatientActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_header_gradient" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/verdana"
        android:text="Ustawienia"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/accountImageSettings"
        android:layout_width="69dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="profil pacjenta"
        android:onClick="onClickReady"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/ic_account_box_white" />

    <ImageView
        android:id="@+id/searchIconSettings"
        android:layout_width="53dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:contentDescription="wyszukiwanie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:onClick="onClickSearch"
        app:srcCompat="@drawable/ic_search_white_box" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/verdana_bold"
                android:text="Zmiana danych osobowych"
                android:textAlignment="center"
                android:textColor="@color/navy"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/verdana"
                    android:text="Telefon"
                    android:textColor="@color/navy"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/phoneEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_button"
                    android:fontFamily="@font/verdana"
                    android:hint="15963278"
                    android:inputType="phone"
                    android:paddingStart="10dp"
                    android:textColor="@color/navy"
                    android:textColorHint="@color/blue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/verdana"
                    android:text="Ulica"
                    android:textColor="@color/navy"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/streetEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_button"
                    android:fontFamily="@font/verdana"
                    android:hint="Popiełuszki"
                    android:paddingStart="10dp"
                    android:textColor="@color/navy"
                    android:textColorHint="@color/blue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/verdana"
                    android:text="Numer budynku"
                    android:textColor="@color/navy"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/buildingNrEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_button"
                    android:fontFamily="@font/verdana"
                    android:hint="26"
                    android:paddingStart="10dp"
                    android:textColor="@color/navy"
                    android:textColorHint="@color/blue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/verdana"
                    android:text="Numer lokalu"
                    android:textColor="@color/navy"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/apartmentEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_button"
                    android:fontFamily="@font/verdana"
                    android:hint="31"
                    android:paddingStart="10dp"
                    android:textColor="@color/navy"
                    android:textColorHint="@color/blue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/verdana"
                    android:text="Miasto"
                    android:textColor="@color/navy"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/cityEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_button"
                    android:fontFamily="@font/verdana"
                    android:hint="Lublin"
                    android:paddingStart="10dp"
                    android:textColor="@color/navy"
                    android:textColorHint="@color/blue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/verdana"
                    android:text="Kod pocztowy"
                    android:textColor="@color/navy"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/postalCodeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/white_button"
                    android:fontFamily="@font/verdana"
                    android:hint="20-052"
                    android:paddingStart="10dp"
                    android:textColor="@color/navy"
                    android:textColorHint="@color/blue"
                    android:textSize="20sp" />


                <Button
                    android:id="@+id/savePatientData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/lagoon_button"
                    android:fontFamily="@font/verdana"
                    android:text="Zapisz"
                    android:textAllCaps="false"
                    android:layout_marginBottom="30dp"
                    android:onClick="onClickSaveNewData"
                    android:textColor="@color/navy"
                    android:textSize="24sp" />

            </LinearLayout>


                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/verdana_bold"
                        android:text="Zmiana hasła"
                        android:textAlignment="center"
                        android:textColor="@color/navy"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/verdana"
                            android:text="Obecne hasło"
                            android:textColor="@color/navy"
                            android:textSize="22dp" />

                        <EditText
                            android:id="@+id/currentPassEdit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/white_button"
                            android:fontFamily="@font/verdana"
                            android:inputType="textPassword"
                            android:paddingStart="10dp"
                            android:textColor="@color/navy"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/verdana"
                            android:text="Nowe hasło"
                            android:textColor="@color/navy"
                            android:textSize="22dp" />

                        <EditText
                            android:id="@+id/newPassEdit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/white_button"
                            android:fontFamily="@font/verdana"
                            android:inputType="textPassword"
                            android:paddingStart="10dp"
                            android:textColor="@color/navy"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/verdana"
                            android:text="Powtórz nowe hasło"
                            android:textColor="@color/navy"
                            android:textSize="22dp" />

                        <EditText
                            android:id="@+id/repeatPassEdit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/white_button"
                            android:fontFamily="@font/verdana"
                            android:inputType="textPassword"
                            android:paddingStart="10dp"
                            android:textColor="@color/navy"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/changePassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/lagoon_button"
                            android:fontFamily="@font/verdana"
                            android:text="Zmień hasło"
                            android:onClick="onClickChangePassword"
                            android:textAllCaps="false"
                            android:textColor="@color/navy"
                            android:textSize="24sp" />
                        <TextView
                            android:id="@+id/forgetPasswordSettings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/verdana"
                            android:gravity="center"
                            android:text="@string/nie_pami_tasz_has_a"
                            android:textColor="@color/navy"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="30dp"
                             />

                        <Button
                            android:id="@+id/readyButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gotowe"
                            android:onClick="onClickReady"
                            android:textAllCaps="false"
                            android:textColor="@color/navy"
                            android:background="@drawable/sky_button"
                            android:fontFamily="@font/verdana"
                            android:layout_marginBottom="50dp"
                            android:textSize="24sp"/>


                    </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>