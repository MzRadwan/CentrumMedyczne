<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sky</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/lagoon</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/sky</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/lagoon</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>



</resources>